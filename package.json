{
  "name": "nimbly-lite",
  "version": "0.0.1",
  "description": "Hubspot theme",
  "license": "MIT",
  "authors": "Resultify",
  "repository": "resultify/nimbly-lite",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "lint-src-css": "stylelint 'src/css/**/*.css'",
    "lint-theme-modules-css": "stylelint 'theme/modules/**/*.css'",
    "lint-js": "standard -v 'src/js/**/*.js build/**/*.js theme/**/*.js'",
    "lint-all": "npm run lint-src-css & npm run lint-theme-modules-css & npm run lint-js",
    "test": "npm run lint-all",
    "build": "node build/build.js",
    "upload": "node build/upload.js",
    "fetchModules": "node build/fetchModules.js",
    "fetchDraftModules": "MODE=draft npm run fetchModules",
    "fetchAll": "node build/fetchAll.js",
    "watch": "node build/watch.js"
  },
  "dependencies": {
    "bootstrap": "~v5.1.3",
    "simplelightbox": "~2.10.3"
  },
  "devDependencies": {
    "browserslist": "~4.21.4",
    "husky": "~8.0.1",
    "standard": "~17.0.0",
    "stylelint": "~14.13.0",
    "stylelint-config-standard": "~28.0.0",
    "stylelint-no-unsupported-browser-features": "~6.0.1"
  },
  "engines": {
    "node": ">=16.12.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1.5%"
  ],
  "standard": {
    "ignore": [
      "src/tmp/",
      "theme/assets/"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "selector-class-pattern": null,
      "selector-pseudo-element-colon-notation": "single",
      "comment-empty-line-before": null,
      "max-line-length": 180,
      "plugin/no-unsupported-browser-features": true
    },
    "ignoreFiles": [
      "src/tmp/**/*.css",
      "theme/assets/**/*.css"
    ]
  }
}
